{
    "name": "functions",
    "version": "1.0.0",
    "description": "Firebase Cloud Functions for NephroLite",
    "main": "lib/index.js",
    "scripts": {
        "build": "tsc",
        "build:watch": "tsc --watch",
        "serve": "npm run build && firebase emulators:start --only functions",
        "shell": "npm run build && firebase functions:shell",
        "start": "npm run shell",
        "deploy": "firebase deploy --only functions",
        "logs": "firebase functions:log"
    },
    "engines": {
        "node": "18"
    },
    "dependencies": {
        "firebase-admin": "^12.0.0",
        "firebase-functions": "^5.0.0",
        "zod": "^3.22.4",
        "express": "^4.18.2",
        "cors": "^2.8.5"
    },
    "devDependencies": {
        "@types/express": "^4.17.21",
        "@types/cors": "^2.8.17",
        "@types/node": "^20.10.0",
        "typescript": "^5.3.3"
    },
    "private": true
}